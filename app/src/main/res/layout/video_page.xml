                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Duration: 4:37"
                    android:textStyle="italic"
                    android:textSize="14dp"
                    android:textColor="#000000"
                    android:layout_marginTop="9dp"/>
            </LinearLayout>
        </LinearLayout>
<!--=================================-->
        <LinearLayout
