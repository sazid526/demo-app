            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:orientation="horizontal"
            android:background="#E6E6E6"
            android:layout_margin="3dp">
            <ImageView
                android:layout_width="170dp"
                android:layout_height="140dp"
                android:src="@drawable/t2"
                android:layout_marginTop="4dp"
                android:scaleType="fitXY"
                android:layout_marginBottom="4dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginLeft="5dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="এক নজরে জীবননগর এর অসাধারণ ভিডিও ।ak nojore jibannagar। ariyan shohag"
                    android:maxLines="2"
                    android:textSize="20sp"
                    android:textStyle="normal"
                    android:textColor="#000000"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="এক নজরে জীবননেগর এর ভিডিও। ভিডিওটি ভালো লাগলে অবশ্যই লাইক, কমেন্ট এবং শেয়ার করবেন।"
                    android:layout_marginTop="5dp"
                    android:textSize="14sp"
                    android:maxLines="2"
                    android:textStyle="normal"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Duration: 7:55"
                    android:textStyle="italic"
                    android:textSize="14dp"
                    android:textColor="#000000"
                    android:layout_marginTop="9dp"/>
            </LinearLayout>
        </LinearLayout>
        <!--===================================-->
        <LinearLayout
            android:id="@+id/video4"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:orientation="horizontal"
            android:background="#E6E6E6"
            android:layout_margin="3dp">
            <ImageView
                android:layout_width="170dp"
                android:layout_height="140dp"
                android:src="@drawable/vv"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp"
                android:scaleType="fitXY"
